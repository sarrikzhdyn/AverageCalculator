<Window x:Class="DrawingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Рисовалка" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF9999">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Background="#FFB6B6" Margin="10">
            <Button x:Name="LineButton" Content="Линия" Click="LineButton_Click" 
                    Margin="5" Padding="10" Width="200" Height="50" FontSize="16" Background="#FF9999" Foreground="White"/>
            <Button x:Name="CircleButton" Content="Круг" Click="CircleButton_Click" 
                    Margin="5" Padding="10" Width="200" Height="50" FontSize="16" Background="#FF9999" Foreground="White"/>
            <Button x:Name="RectangleButton" Content="Прямоугольник" Click="RectangleButton_Click" 
                    Margin="5" Padding="10" Width="200" Height="50" FontSize="16" Background="#FF9999" Foreground="White"/>
            <Button x:Name="ClearButton" Content="Очистить холст" Click="ClearButton_Click" 
                    Margin="5" Padding="10" Width="200" Height="50" FontSize="16" Background="#FF9999" Foreground="White"/>
            <TextBlock Text="Толщина (1-10):" Foreground="White" Margin="5,20,5,5"/>
            <Slider x:Name="ThicknessSlider" Minimum="1" Maximum="10" Value="2" Width="200" Margin="5"/>
            <TextBlock Text="Выберите инструмент и кликните на холсте" Foreground="White" Margin="5" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Холст -->
        <Canvas x:Name="DrawingCanvas" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Background="White" Margin="10"/>
    </Grid>
</Window>