<Window x:Class="LibraryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Библиотека" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#2E7D32">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="111*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Библиотека" FontSize="24" Foreground="White" 
                   HorizontalAlignment="Left" Margin="336,15,0,15" Width="128" Grid.ColumnSpan="2"/>

        <!-- Выбор книги и поля ввода -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="55,20,400,20" Grid.ColumnSpan="2">
            <Border BorderBrush="#A5D6A7" BorderThickness="1" CornerRadius="5" Background="White" Margin="0,0,0,15">
                <ComboBox x:Name="BookTypeComboBox" Width="342" Height="45" FontSize="16" SelectionChanged="BookTypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Художественная"/>
                    <ComboBoxItem Content="Нехудожественная"/>
                </ComboBox>
            </Border>
            <Border BorderBrush="#A5D6A7" BorderThickness="1" CornerRadius="5" Background="White" Margin="0,0,0,15">
                <TextBox x:Name="TitleTextBox" Width="349" Height="45" FontSize="16" Text="Введите название книги"/>
            </Border>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20,0,20,0" VerticalAlignment="Center" Height="180">
            <Button x:Name="AddBookButton" Content="Добавить книгу" Click="AddBookButton_Click" 
                    Margin="0,0,0,15" Padding="10" Width="220" Height="45" FontSize="16">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="#A5D6A7" CornerRadius="8" BorderBrush="#A5D6A7" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#81C784"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#66BB6A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="IssueBookButton" Content="Выдать книгу" Click="IssueBookButton_Click" 
                    Margin="0,0,0,15" Padding="10" Width="220" Height="45" FontSize="16">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="#A5D6A7" CornerRadius="8" BorderBrush="#A5D6A7" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#81C784"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#66BB6A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="CheckAvailabilityButton" Content="Проверить доступность" Click="CheckAvailabilityButton_Click" 
                    Margin="0,0,0,15" Padding="10" Width="220" Height="45" FontSize="16">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="#A5D6A7" CornerRadius="8" BorderBrush="#A5D6A7" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#81C784"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#66BB6A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Поле для вывода результата -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" BorderBrush="#A5D6A7" BorderThickness="1" CornerRadius="5" Background="White" Margin="20,20,20,20">
            <TextBlock x:Name="ResultTextBlock" Text="Результат появится здесь" FontSize="16" Foreground="Black" 
                       TextWrapping="Wrap" Width="740" TextAlignment="Center" Margin="10"/>
        </Border>
    </Grid>
</Window>