<Window x:Class="StudentApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учёт студентов" Height="450" Width="784"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#E6F0FA" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Учёт студентов" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Выбор курса -->
        <Border Grid.Row="1" BorderBrush="#D3D3D3" BorderThickness="1" CornerRadius="5" Margin="10,0,10,15">
            <ComboBox x:Name="CourseComboBox" Height="35" FontSize="16" SelectionChanged="CourseComboBox_SelectionChanged" Margin="-1,0,-1,0">
                <ComboBoxItem Content="1-й курс"/>
                <ComboBoxItem Content="2-й курс"/>
                <ComboBoxItem Content="3-й курс"/>
                <ComboBoxItem Content="4-й курс"/>
            </ComboBox>
        </Border>

        <!-- Поля ввода -->
        <Border Grid.Row="2" BorderBrush="#D3D3D3" BorderThickness="1" CornerRadius="5" Margin="10,0,8,15">
            <StackPanel x:Name="InputPanel" Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="ФИО: " FontSize="16" VerticalAlignment="Center" Width="60"/>
                    <TextBox x:Name="NameTextBox" Width="671" Height="35" FontSize="16"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Баллы: " FontSize="16" VerticalAlignment="Center" Width="60"/>
                    <TextBox x:Name="GradesTextBox" Width="664" Height="35" FontSize="16"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Кнопки и результат -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Кнопки -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <Button x:Name="CreateStudentButton" Content="Создать студента" Click="CreateStudentButton_Click" 
                        Margin="5" Padding="10" Width="220" Height="44" FontSize="16" Background="#87CEEB" BorderBrush="#D3D3D3">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ADD8E6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="CalculateGradeButton" Content="Средний балл" Click="CalculateGradeButton_Click" 
                        Margin="5" Padding="10" Width="220" Height="44" FontSize="16" Background="#87CEEB" BorderBrush="#D3D3D3">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ADD8E6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="GetCourseInfoButton" Content="Информация о курсе" Click="GetCourseInfoButton_Click" 
                        Margin="5" Padding="10" Width="220" Height="44" FontSize="16" Background="#87CEEB" BorderBrush="#D3D3D3">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ADD8E6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Поле для вывода результата -->
            <Border Grid.Row="1" BorderBrush="#D3D3D3" BorderThickness="1" CornerRadius="5">
                <TextBlock x:Name="ResultTextBlock" Text="Результат появится здесь" FontSize="16" 
                           TextWrapping="Wrap" Width="620" TextAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>