<Window x:Class="TextEditorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Текстовый редактор" Height="450" Width="600"
        WindowStartupLocation="CenterScreen" Background="#FFE4E1">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="btnOpen" Content="Открыть" Click="btnOpen_Click" Padding="10" Margin="5" Background="#FFB6C1" Foreground="White" Width="82"/>
            <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" Padding="10" Margin="5" Background="#FFB6C1" Foreground="White" Width="83"/>
        </StackPanel>
        <TextBox x:Name="txtEditor" Grid.Row="1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                 TextWrapping="Wrap" Background="White" BorderBrush="#FFB6C1" BorderThickness="2"/>
    </Grid>
</Window>