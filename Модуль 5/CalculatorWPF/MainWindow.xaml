<Window x:Class="CalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="400" Width="300"
        WindowStartupLocation="CenterScreen" Background="#FFFFFF">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Поле для отображения результата -->
        <TextBox x:Name="txtResult" Grid.Row="0" IsReadOnly="True" FontSize="24" TextAlignment="Right" 
                 VerticalContentAlignment="Center" Height="50" Margin="0,0,0,10" Background="#FFFFFF" BorderBrush="#800000" BorderThickness="1"/>

        <!-- Панель с кнопками -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка стирания -->
            <Button x:Name="btnClear" Content="C" Grid.Row="0" Grid.Column="0" Click="Clear_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White" Grid.ColumnSpan="4"/>

            <!-- Кнопки цифр и операций -->
            <Button x:Name="btn7" Content="7" Grid.Row="1" Grid.Column="0" Click="Number_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btn8" Content="8" Grid.Row="1" Grid.Column="1" Click="Number_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btn9" Content="9" Grid.Row="1" Grid.Column="2" Click="Number_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btnDivide" Content="/" Grid.Row="1" Grid.Column="3" Click="Operation_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>

            <Button x:Name="btn4" Content="4" Grid.Row="2" Grid.Column="0" Click="Number_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btn5" Content="5" Grid.Row="2" Grid.Column="1" Click="Number_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btn6" Content="6" Grid.Row="2" Grid.Column="2" Click="Number_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btnMultiply" Content="*" Grid.Row="2" Grid.Column="3" Click="Operation_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>

            <Button x:Name="btn1" Content="1" Grid.Row="3" Grid.Column="0" Click="Number_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btn2" Content="2" Grid.Row="3" Grid.Column="1" Click="Number_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btn3" Content="3" Grid.Row="3" Grid.Column="2" Click="Number_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btnMinus" Content="-" Grid.Row="3" Grid.Column="3" Click="Operation_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>

            <Button x:Name="btn0" Content="0" Grid.Row="4" Grid.Column="0" Click="Number_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btnDot" Content="." Grid.Row="4" Grid.Column="1" Click="Number_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btnEqual" Content="=" Grid.Row="4" Grid.Column="2" Click="Equal_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
            <Button x:Name="btnPlus" Content="+" Grid.Row="4" Grid.Column="3" Click="Operation_Click" Margin="2" FontSize="18" Background="#800000" Foreground="White"/>
        </Grid>
    </Grid>
</Window>