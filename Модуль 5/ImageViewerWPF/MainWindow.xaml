<Window x:Class="ImageViewerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр изображений" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Кнопка для открытия изображения с увеличенным размером и закругленными углами -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="btnOpen" Content="Открыть изображение" Click="btnOpen_Click" Padding="10" Width="180" FontSize="14" Background="#A9A9A9" Foreground="White" Height="27" RenderTransformOrigin="0.517,1.101">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="1" BorderBrush="#A9A9A9">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- Холст для отображения изображения -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image x:Name="imgViewer" Stretch="Uniform" Margin="10"/>
        </ScrollViewer>

        <!-- Слайдер для масштабирования -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="Масштаб:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#A9A9A9"/>
            <Slider x:Name="zoomSlider" Minimum="0.5" Maximum="3.0" Value="1.0" Width="200" ValueChanged="zoomSlider_ValueChanged" Background="#A9A9A9" Foreground="White" Height="18"/>
        </StackPanel>
    </Grid>
</Window>