<Window x:Class="ShapeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление задачами" MinHeight="500" MinWidth="400">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4B0082" Offset="0"/>
            <!-- Тёмно-фиолетовый -->
            <GradientStop Color="#FFB6C1" Offset="1"/>
            <!-- Светло-розовый -->
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель для добавления задачи -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Название задачи:" FontSize="14" Margin="0,0,0,5" FontWeight="Bold" Foreground="#333333"/>
            <TextBox x:Name="TaskNameTextBox" Height="30" Margin="0,0,0,10" Background="#FFFFFF" Foreground="#333333"/>
            <TextBlock Text="Категория:" FontSize="14" Margin="0,0,0,5" FontWeight="Bold" Foreground="#333333"/>
            <ComboBox x:Name="CategoryComboBox" Height="30" Margin="0,0,0,10" Background="#FFFFFF" Foreground="#333333">
                <ComboBoxItem Content="Работа"/>
                <ComboBoxItem Content="Личное"/>
                <ComboBoxItem Content="Другое"/>
            </ComboBox>
            <TextBlock Text="Выберите действие:" FontSize="14" Margin="0,0,0,5" FontWeight="Bold" Foreground="#333333"/>
            <ComboBox x:Name="DelegateComboBox" Height="30" Margin="0,0,0,10" Background="#FFFFFF" Foreground="#333333">
                <ComboBoxItem Content="Отправить уведомление"/>
                <ComboBoxItem Content="Записать в журнал"/>
            </ComboBox>
            <Button x:Name="AddTaskButton" Content="Добавить задачу" Click="AddTaskButton_Click" Margin="5" Padding="10,5" Width="150">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#C71585" CornerRadius="10" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DB7093"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Кнопка для выполнения всех задач -->
        <StackPanel Grid.Row="1" Margin="5,10" Orientation="Horizontal">
            <Button x:Name="ExecuteTasksButton" Content="Выполнить все задачи" Click="ExecuteTasksButton_Click" Margin="5" Padding="10,5" Width="150">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#C71585" CornerRadius="10" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DB7093"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="ClearResultsButton" Content="Очистить результаты" Click="ClearResultsButton_Click" Margin="5" Padding="10,5" Width="150">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#C71585" CornerRadius="10" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DB7093"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Список задач -->
        <ScrollViewer Grid.Row="2" Margin="10" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="TaskListBox" MinHeight="100" FontSize="14" Foreground="#333333" Background="#FFFFFF">
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Удалить задачу" Click="RemoveTask_Click"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
        </ScrollViewer>

        <!-- Поле для вывода уведомлений о выполнении задач -->
        <ScrollViewer Grid.Row="4" Margin="10" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="ResultTextBlock" Text="Результаты выполнения задач появятся здесь" FontSize="14" TextWrapping="Wrap" TextAlignment="Left" Foreground="#333333" Background="#FFFFFF"/>
        </ScrollViewer>
    </Grid>
</Window>