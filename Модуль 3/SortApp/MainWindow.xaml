<Window x:Class="SortingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortingApp"
        mc:Ignorable="d"
        Title="Sorting Application" 
        MinHeight="300" MinWidth="250" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1F2937" Offset="0"/>
            <GradientStop Color="#4B5563" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="6" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#F3F4F6"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,10,5"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#10B981"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              Background="{TemplateBinding Background}" BorderThickness="0"/>
                                <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" 
                                                  Content="{TemplateBinding SelectionBoxItem}" 
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                <Popup x:Name="Popup" IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom" 
                                       AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                    <Border x:Name="DropDownBorder" Background="#FFFFFF" BorderBrush="#6B7280" 
                                            BorderThickness="1" CornerRadius="4" MaxHeight="150">
                                        <ScrollViewer>
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#10B981"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#10B981"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- Ввод, количество случайных чисел, выбор метода -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопки -->
                <RowDefinition Height="*"/>
                <!-- Результат -->
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="#374151" CornerRadius="6" Padding="10" Margin="0,0,0,5">
                <TextBlock Text="Сортировка чисел" FontSize="14" FontWeight="Bold" 
                           FontFamily="Segoe UI" Foreground="#F3F4F6" 
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Ввод, количество случайных чисел и выбор метода -->
            <Border Grid.Row="1" Background="#374151" CornerRadius="6" Padding="10" Margin="0,0,0,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="Введите числа:" Style="{StaticResource ModernTextBlockStyle}"/>
                        <TextBox x:Name="NumbersTextBox" Style="{StaticResource ModernTextBoxStyle}" 
                                 ToolTip="Введите числа, разделённые пробелом или запятой (например, 5 2 8 1 9)"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,5,0">
                        <TextBlock Text="Кол-во случайных:" Style="{StaticResource ModernTextBlockStyle}"/>
                        <TextBox x:Name="RandomCountTextBox" Style="{StaticResource ModernTextBoxStyle}" 
                                 ToolTip="Введите количество случайных чисел (например, 10)"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="5,0,0,0">
                        <TextBlock Text="Метод сортировки:" Style="{StaticResource ModernTextBlockStyle}"/>
                        <ComboBox x:Name="SortMethodSelector" Style="{StaticResource ModernComboBoxStyle}"
                                  ToolTip="Выберите метод сортировки">
                            <ComboBoxItem Content="Пузырьковая сортировка"/>
                            <ComboBoxItem Content="Быстрая сортировка"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Кнопки -->
            <Border Grid.Row="2" Background="#374151" CornerRadius="6" Padding="10" Margin="0,0,0,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" x:Name="GenerateRandomButton" Content="Сгенерировать" Click="GenerateRandomButton_Click" 
                            Style="{StaticResource ModernButtonStyle}" ToolTip="Сгенерировать случайные числа" Margin="0,-3,5,-3"/>
                    <Button Grid.Column="1" x:Name="SortButton" Content="Сортировать" Click="SortButton_Click" 
                            Style="{StaticResource ModernButtonStyle}" ToolTip="Отсортировать введённые числа" Margin="5,-3,5,-3"/>
                    <Button Grid.Column="2" x:Name="ClearButton" Content="Очистить" Click="ClearButton_Click" 
                            Style="{StaticResource ModernButtonStyle}" ToolTip="Очистить все поля" Margin="5,-3,0,-3"/>
                </Grid>
            </Border>

            <!-- Результат -->
            <Border Grid.Row="3" Background="#374151" CornerRadius="6" Padding="10">
                <StackPanel>
                    <TextBlock Text="Отсортированные числа:" Style="{StaticResource ModernTextBlockStyle}"/>
                    <ListBox x:Name="SortedNumbersListBox" Height="150" Style="{StaticResource ModernListBoxStyle}"
                             ToolTip="Список отсортированных чисел"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>