<Window x:Class="ShapeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система уведомлений" MinHeight="500" MinWidth="400">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FDF6F0" Offset="0"/>
            <GradientStop Color="#F1EDEB" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель для сообщения -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Сообщение:" FontSize="14" Margin="0,0,0,5" FontWeight="Bold" Foreground="#2F2F2F"/>
            <TextBlock Text="Написать сообщение" FontSize="14" Margin="0,0,0,5" Foreground="#5C5C5C"/>
            <TextBox x:Name="MessageTextBox" Height="30" Width="300" Margin="0,0,0,10"/>
            <Button x:Name="SendMessageButton" Content="Отправить" Click="SendMessageButton_Click" Margin="5" Padding="10,5" Width="150">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#F4A261" CornerRadius="10" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E76F51"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Панель для звонка -->
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Номер телефона:" FontSize="14" Margin="0,0,0,5" FontWeight="Bold" Foreground="#2F2F2F"/>
            <TextBlock Text="Позвонить по телефону" FontSize="14" Margin="0,0,0,5" Foreground="#5C5C5C"/>
            <TextBox x:Name="PhoneTextBox" Height="30" Width="300" Margin="0,0,0,10"/>
            <Button x:Name="MakeCallButton" Content="Позвонить" Click="MakeCallButton_Click" Margin="5" Padding="10,5" Width="150">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#F4A261" CornerRadius="10" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E76F51"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Панель для email -->
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Text="Электронная почта:" FontSize="14" Margin="0,0,0,5" FontWeight="Bold" Foreground="#2F2F2F"/>
            <TextBlock Text="Написать на электронную почту" FontSize="14" Margin="0,0,0,5" Foreground="#5C5C5C"/>
            <TextBox x:Name="EmailTextBox" Height="30" Width="300" Margin="0,0,0,5"/>
            <TextBlock Text="Сообщение:" FontSize="14" Margin="0,0,0,5" Foreground="#5C5C5C"/>
            <TextBox x:Name="SubjectTextBox" Height="30" Width="300" Margin="0,0,0,10"/>
            <Button x:Name="SendEmailButton" Content="Отправить" Click="SendEmailButton_Click" Margin="5" Padding="10,5" Width="150">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#F4A261" CornerRadius="10" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E76F51"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Поле для вывода результата -->
        <ScrollViewer Grid.Row="3" Margin="10" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="ResultTextBlock" Text="Результаты появятся здесь" FontSize="16" TextWrapping="Wrap" TextAlignment="Left" Foreground="#2F2F2F"/>
        </ScrollViewer>
    </Grid>
</Window>